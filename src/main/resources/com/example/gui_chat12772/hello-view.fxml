<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400" prefWidth="300" alignment="CENTER"
      xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.gui_chat12772.HelloController">
   <TextArea prefHeight="350" prefWidth="300" fx:id="messageBox"/>
   <HBox prefHeight="25" prefWidth="300">
        <TextField prefHeight="25" prefWidth="200" fx:id="textField"/>
        <Button fx:id="sendBtn" disable="true" onAction="#onSendHandler"
                prefHeight="25" prefWidth="100" text="Отправить"/>
   </HBox>
   <Button fx:id="connectBtn" onAction="#onConnect" prefHeight="25" prefWidth="300" text="Подключиться к серверу"/>
</VBox>