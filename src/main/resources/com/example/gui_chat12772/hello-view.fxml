<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.gui_chat12772.HelloController">
    <!--<TextArea prefWidth="200" prefHeight="400" fx:id="listBox"/>-->
    <VBox prefWidth="200" prefHeight="400" fx:id="usersBox"/>
    <VBox prefHeight="400" prefWidth="300" alignment="CENTER">
        <TextArea editable="false" prefHeight="350" prefWidth="300" fx:id="messageBox"/>
        <HBox prefHeight="25" prefWidth="300">
            <TextField onAction="#onSendHandler" prefHeight="25" prefWidth="200" fx:id="textField"/>
            <Button fx:id="sendBtn" disable="true" onAction="#onSendHandler"
                    prefHeight="25" prefWidth="100" text="Отправить"/>
        </HBox>
<!--
        <Button fx:id="connectBtn" onAction="#onConnect" prefHeight="25" prefWidth="300" text="Подключиться к серверу"/>
-->
    </VBox>
</HBox>
